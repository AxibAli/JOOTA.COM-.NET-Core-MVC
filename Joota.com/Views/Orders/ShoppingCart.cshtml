@using Joota.com.Data.ViewModels;
@model ShoppingCartVM

@{
    ViewData["Title"] = "Shopping Cart Summary";
}

<div class="row">
   <div class="col-md-8 offset-2">
       <div class="text-center">
         <h2>Your Shopping Cart Summary</h2>
        </div>

        <table class="table">
            <thead
                <tr>
                <th>Selected amount</th>
                <th>Shoes</th>
                <th>Price</th>
                <th>Subtotal</th>
                <th></th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model.ShoppingCart.ShoppingCartItem)
                {
                    <tr>
                        <td class="align-middle">@item.Amount</td>
                        <td class="align-middle">@item.Shoes.Name</td>
                        <td class="align-middle">@item.Shoes.Price.ToString("c")</td>
                        <td class="align-middle">@((item.Amount* item.Shoes.Price).ToString("c"))</td>
                        <td class="align-middle">
                            <a class="text-center" asp-controller="Orders" asp-action="RemoveItemFromShoppingCart"
                               asp-route-id = "@item.Shoes.Id">
                             <i class="bg-info bi-cart-dash"></i>
                           </a>

                            <a class="text-center" asp-controller="Orders" asp-action="RemoveItemFromShoppingCart"
                           asp-route-id="@item.Shoes.Id">
                                <i class="bg-info bi-cart-dash"></i>
                            </a>
                            <a class="text-success" asp-controller="Orders" asp-action="AddItemToShoppingCart"
                           asp-route-id="@item.Shoes.Id">
                                <i class="bg-info bi-cart-plus"></i>
                            </a>

                    </tr>
                    
                }
            </tbody>
            <tfoot>
                <tr>
                <td colspan="2"></td>
                <td><b>Total:</b></td>
                <td>
                    @Model.ShoppingCartTotal.ToString("c")
                </td>
                </tr>
            </tfoot>
        </table>
        <div class="text-center">
            <div class="btn-group">
                <a class="btn btn-outline-primary"  asp-action="CompleteOrder">
                    Complete Order

                </a>
                <a class="btn btn-outline-success" asp-controller="Shoes" asp-action="Index">
                    Add more Items
                </a>
            </div>
        </div>
   </div>

 
</div>